extends layout

block content
  .container.text-center
      .row
        h2 Faltou luz?!

      a(href="https://github.com/danielneis/faltoufoo")
        img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png")

      .row
        form(role='form')#add
          .form-group#where-group
            h3
              label(for='where').control-label Onde?
            input#where.form-control
            span.where-help.help-block.hidden obrigatório

          .form-group#when-group
            h3
              label(for='when').control-label Quando?
            input#when.form-control
            span.when-help.help-block.hidden obrigatório


          button(type='submit')#btn-add.btn.btn-lg.btn-success Mostra no mapa!

      .row
          input(type='hidden')#where-lon
          input(type='hidden')#where-lat

      .row
        h2 Onde falta luz?!
        #map

